{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",        // o "NodeNext" si prefieres Node-style
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": { "@/*": ["*"] },
    "types": ["vite/client"],             // habilita import.meta.env tipado
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "useDefineForClassFields": true,
    "moduleDetection": "force"            // evita falsos positivos en el editor
  },
  "include": ["src"]
}